{
  "name": "ghost-theme-boilerplate",
  "description": "Simple boilerplate theme for ghost. Can be used as a standalone theme and installed in ghost. Also can be used as a template for building ",
  "version": "1.0.0",
  "private": "true",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "keywords": [
    "ghost",
    "theme",
    "boilerplate",
    "ghost-theme"
  ],
  "author": {
    "name": "nrk9819",
    "email": "nrk9819@skiff.com",
    "url": "https://nrk9819.bitb.dev"
  },
  "docs": "https://github.com/nrk9819/ghost-theme-boilerplate/blob/main/README.md",
  "browserslist": [
    "defaults"
  ],
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "xs": {
        "width": 150
      },
      "s": {
        "width": 400
      },
      "m": {
        "width": 750
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1140
      },
      "xxl": {
        "width": 1920
      }
    }
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "node utils/scripts/watchfiles.mjs",
    "build:js": "node utils/scripts/esbuild.build.mjs",
    "build:css": "node utils/scripts/postcss.build.mjs",
    "zip": "node utils/scripts/create-zip.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "archiver": "^6.0.1",
    "autoprefixer": "^10.4.16",
    "chokidar": "^3.5.3",
    "cssnano": "^6.0.1",
    "esbuild": "^0.19.9",
    "glob-to-regexp": "^0.4.1",
    "husky": "^8.0.0",
    "is-glob": "^4.0.3",
    "lint-staged": "15.2.0",
    "postcss": "^8.4.32",
    "postcss-import": "^15.1.0",
    "postcss-load-config": "^5.0.2",
    "prettier": "3.1.1",
    "tailwindcss": "3.3.6",
    "type-fest": "^4.8.3"
  }
}
